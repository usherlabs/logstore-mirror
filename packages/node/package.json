{
	"name": "@etl-network/node",
	"version": "0.0.1",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "UNLICENSED",
	"description": "ETL Network Node",
	"private": false,
	"scripts": {
		"build": "del dist && tsc && resolve-tspaths",
		"build:binaries": "yarn build && del out && pkg --no-bytecode --public-packages '*' --output out/etlnetwork package.json && node ./node_modules/@kyve/core/dist/src/scripts/checksum.js",
		"format": "prettier --write \"**/*.{js,jsx,mjs,ts,tsx,json,css,scss,md}\"",
		"start": "node ./dist/src/index.js",
		"start:local": "yarn start --poolId 0 -m 'add coast sell simple century early layer disagree fame sad head crystal warm say critic shop example moon wasp grant sad left amateur beyond' --keyfile ./.secrets/keyfile.json -s 1000 --network local --verbose",
		"start:fresh": "npm-run-all -s build start",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts"
	},
	"bin": "./dist/src/index.js",
	"pkg": {
		"scripts": "./dist/src/index.js",
		"assets": "./node_modules/@kyve/sdk/dist/proto/*",
		"targets": [
			"latest-linux-x64",
			"latest-macos-x64"
		],
		"outputPath": "out"
	},
	"prettier": {
		"singleQuote": true
	},
	"dependencies": {
		"@etl-network/contracts": "*",
		"@gnosis.pm/safe-core-sdk": "^3.1.1",
		"@gnosis.pm/safe-core-sdk-types": "^1.6.1",
		"@gnosis.pm/safe-ethers-lib": "^1.6.1",
		"@kyve/core": "^1.3.5",
		"@sentry/node": "^7.13.0",
		"@sentry/tracing": "^7.13.0",
		"abstract-level": "^1.0.3",
		"arweave": "^1.11.6",
		"axios": "^0.27.2",
		"classic-level": "^1.2.0",
		"commander": "^9.4.0",
		"dotenv": "^16.0.2",
		"ethers": "^5.7.1",
		"object-hash": "^3.0.0",
		"streamr-client": "^6.0.1",
		"vm2": "^3.9.11"
	},
	"devDependencies": {
		"@types/node": "^18.7.18",
		"@types/node-fetch": "^2.6.2",
		"@types/pino": "^7.0.5",
		"@types/websocket": "^1.0.5",
		"@types/ws": "^8.5.3",
		"del-cli": "^5.0.0",
		"jest": "^29.0.3",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.6.0",
		"prettier": "^2.6.2",
		"resolve-tspaths": "^0.8.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.6.4",
		"webhook-discord": "^3.7.8"
	}
}
