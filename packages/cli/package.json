{
	"name": "@concertodao/logstore-cli",
	"version": "0.0.1",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "GPL-3.0",
	"description": "Concerto Log Store CLI",
	"private": false,
	"scripts": {
		"build": "del dist && tsc",
		"bin": "del out && pkg --no-bytecode --public-packages '*' --output out/logstore package.json",
		"build:binaries": "run-s build bin",
		"start": "node ./dist/src/index.js",
		"format": "prettier --write .",
		"start:fresh": "npm-run-all -s build start",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts"
	},
	"bin": "./dist/src/index.js",
	"prettier": {
		"singleQuote": true
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"commander": "^10.0.0",
		"inquirer": "^8.1.1",
		"redstone-api": "^0.4.11",
		"tslog": "^4.8.2"
	},
	"devDependencies": {
		"@types/node": "^18.7.18",
		"@types/node-fetch": "^2.6.2",
		"@types/pino": "^7.0.5",
		"@types/websocket": "^1.0.5",
		"@types/ws": "^8.5.3",
		"del-cli": "^5.0.0",
		"eslint": "^8.34.0",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.6.0",
		"prettier": "^2.6.2",
		"resolve-tspaths": "^0.8.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"tslib": "^2.5.0",
		"typescript": "^4.6.4"
	}
}
