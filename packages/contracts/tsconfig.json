{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"include": ["./scripts", "./test", "./tasks"],
	"files": ["./hardhat.config.ts"]
}
