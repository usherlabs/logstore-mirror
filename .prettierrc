{
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"overrides": [
		{
			"files": "*.yml",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.sol",
			"options": {
				"compiler": "0.8.17",
				"tabWidth": 4
			}
		},
		{
			"files": ["*.ts"],
			"options": {
				"parser": "typescript",
				"importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
				"importOrderParserPlugins": ["typescript"],
				"importOrderSeparation": true,
				"importOrderSortSpecifiers": true
			}
		}
	]
}
